// _forms.scss v-0.3 //
// #region Forms ================== //
// BORDERS are being set with box-shadow //
button,
input,
select,
textarea
  color inherit
  background-color transparent
  background-color rgba(255,255,255,0)
  border 0 solid
  outline none
  margin 0
  padding 0.25em 0.5em
  border-radius 0.25rem
  box-shadow 0px 0px 0px 1px inset muted-5

button,
[type="button"],
[type="reset"],
[type="submit"]
  text-transform none
  -webkit-appearance none
  outline none
  user-select none
  border-radius 0.25rem
  cursor pointer
  
  &:hover 
    box-shadow: 0px 0px 0px 1px inset muted-8

  &:active
    box-shadow 0px 0px 0px 1px inset muted-3


[type="text"], [type="email"],
[type="search"], [type="tel"],
[type="url"], [type="password"],
[type="number"], textarea, select
  min-width 3rem

  &:focus 
    box-shadow: 0px 0px 0px 1px inset muted-8

input[type=checkbox]
  box-shadow none
  vertical-align middle
  cursor pointer

select
  position relative
  height 2.583334rem
  display inline-block
  text-transform none
  -webkit-appearance menulist-button
  cursor pointer
  height 2.576923rem