// _shadows.scss v-0.3 //

umbra = rgba(0, 0, 0, 0.07)
penumbra = rgba(0, 0, 0, 0.07)
ambient = rgba(0, 0, 0, 0.1)

shadow(dp = 1)
  transition: box-shadow 0.2s
  
  if dp == 0
    box-shadow: 0px 0px 0px 0px umbra
    
  if dp == 1
    box-shadow: 0px 1px 4px -1px umbra, 
    0px 0px 1px 0px penumbra, 
    0px 1px 4px 0px ambient
    
  if dp == 2
    box-shadow: 0px 3px 1px -2px umbra, 
    0px 2px 2px 0px penumbra, 
    0px 1px 5px 0px ambient
    
  if dp == 3
    box-shadow: 0px 3px 3px -2px umbra, 
    0px 3px 4px 0px penumbra, 
    0px 1px 8px 0px ambient
  
  if dp==4 
    box-shadow: 
    0px 2px 4px -1px umbra,
    0px 4px 5px 0px penumbra,
    0px 1px 10px 0px ambient
  
  if dp==5 
    box-shadow: 
    0px 3px 5px -1px umbra,
    0px 5px 8px 0px penumbra,
    0px 1px 14px 0px ambient
  
